<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="400.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="plannerapp.view.MainMenuViewController">
    <stylesheets>
        <URL value="@forms.css"/>
    </stylesheets>
    <children>
        <Label id="welcomeLabel" fx:id="welcomeLabel" layoutX="80.0" layoutY="5.0" text="Welcome to Jeremy's Planner Application" />
        <Button fx:id="manageUsersButton" layoutX="100.0" layoutY="50.0" prefWidth="200" mnemonicParsing="false" onAction="#addUser" text="Manage Users" />
        <Button fx:id="manageCustomersButton" layoutX="100.0" layoutY="100.0" prefWidth="200" mnemonicParsing="false" onAction="#manageCustomers" text="Manage Customers" />
        <Button fx:id="manageAppointmentsButton" layoutX="100.0" layoutY="150.0" prefWidth="200" mnemonicParsing="false" onAction="#addAppointment" text="Manage Appointment" />
        <Button fx:id="viewMonthButton" layoutX="100.0" layoutY="200.0" prefWidth="200" mnemonicParsing="false" onAction="#viewCalendar" text="View Month Calendar" />
        <Button fx:id="viewWeekButton" layoutX="100.0" layoutY="250.0" prefWidth="200" mnemonicParsing="false" onAction="#viewWeek" text="View Week Calendar" />
        <Button fx:id="AppointmentReportButton" layoutX="100.0" layoutY="300.0" prefWidth="200" mnemonicParsing="false" onAction="#appointmentReport" text="Appointment Report" />
        <Button fx:id="CustomerReportButton" layoutX="100.0" layoutY="350.0" prefWidth="200" mnemonicParsing="false" onAction="#customerReport" text="Customer Report" />
    </children>
</AnchorPane>
